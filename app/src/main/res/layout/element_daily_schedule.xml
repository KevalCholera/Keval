<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llElementDailySchedule"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding5"
    android:paddingRight="@dimen/padding5"
    android:paddingTop="@dimen/padding5">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvElementDailyScheduleName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding3"
                android:text="@string/keval_cholera"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/textSize13" />

            <TextView
                android:id="@+id/tvElementDailyScheduleAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding3"
                android:text="@string/amount_due_1500"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize10" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/ic_calendar" />

                    <TextView
                        android:id="@+id/tvElementRemainderDate"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:gravity="center_vertical"
                        android:hint="@string/date"
                        android:paddingRight="@dimen/padding3"
                        android:paddingTop="@dimen/padding3"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize10" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/ic_clock" />

                    <TextView
                        android:id="@+id/tvElementDailyScheduleTime"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:hint="@string/time"
                        android:paddingTop="@dimen/padding3"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize10" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivElementRemainderEdit"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="@dimen/margin5"
                    android:background="@mipmap/ic_pencil" />

                <ImageView
                    android:id="@+id/ivElementRemainderDelete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="@dimen/margin5"
                    android:background="@mipmap/ic_trash" />
            </LinearLayout>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/swElementRemainderOnOff"
                style="@style/AppTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginTop="@dimen/margin5"
        android:background="@color/colorPrimary" />

</LinearLayout>