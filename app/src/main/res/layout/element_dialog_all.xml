<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dailyScheduleColor"
    android:orientation="vertical"
    android:padding="@dimen/padding7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_view_background"
        android:padding="@dimen/padding7">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/imglostitems" />

        <View
            android:layout_width="0.7dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin10"
            android:layout_marginTop="@dimen/margin10"
            android:background="@color/black" />

        <EditText
            android:id="@+id/etElementDialogAllSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:capitalize="sentences"
            android:hint="@string/search_state"
            android:imeOptions="actionNext"
            android:inputType="textCapWords"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/_gray"
            android:textSize="@dimen/textSize15" />

    </LinearLayout>

    <ListView
        android:id="@+id/lvElementDialogAll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin10"
        android:layout_weight="1"
        android:background="@drawable/list_view_background" />

</LinearLayout>