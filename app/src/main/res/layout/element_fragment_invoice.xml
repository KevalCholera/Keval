<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/padding7"
    android:paddingLeft="@dimen/padding7"
    android:paddingRight="@dimen/padding7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvElementFragmentInvoiceDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin10"
            android:background="@drawable/light_blue_full"
            android:gravity="center"
            android:paddingBottom="@dimen/padding5"
            android:paddingTop="@dimen/padding5"
            android:text="@string/_03_11_2017"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize13" />

        <LinearLayout
            android:id="@+id/llElementFragmentInvoiceWholeDayAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin7"
            android:layout_marginTop="@dimen/margin5"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvElementFragmentInvoiceWholeDayAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/light_blue_full"
                android:gravity="center"
                android:paddingBottom="@dimen/padding5"
                android:paddingTop="@dimen/padding5"
                android:text="@string/_03_11_2017"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize13" />

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/cvElementFragmentInvoiceClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@drawable/ripple_anim"
            card_view:cardCornerRadius="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_anim"
                android:padding="@dimen/padding10">

                <LinearLayout
                    android:id="@+id/llElementFragmentInvoiceNameFirstLetter"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/circular_view"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvElementFragmentInvoiceNameFirstLetter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="9"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin10"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin5"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvElementFragmentInvoiceNo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/invoice"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textSize10"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvElementFragmentInvoiceAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin5"
                            android:text="$ 54253.00"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/textSize10" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvElementFragmentInvoiceName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Keval Cholera"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/textSize10" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvElementFragmentInvoiceTotalProduct"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/total_product_2"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/textSize10" />

                        <com.example.keval.keval.Utils.CircleImageView
                            android:id="@+id/cvElementFragmentInvoicePaid"
                            android:layout_width="@dimen/padding10"
                            android:layout_height="@dimen/padding10"
                            android:layout_marginLeft="@dimen/margin20"
                            android:src="@color/red1"
                            app:civ_fill_color="@color/red1" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>