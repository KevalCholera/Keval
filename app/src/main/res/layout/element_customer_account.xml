<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding7"
    android:paddingEnd="@dimen/padding7"
    android:paddingStart="@dimen/padding7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvElementCustomerAccountDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin10"
            android:layout_marginTop="@dimen/margin5"
            android:background="@drawable/light_blue_full"
            android:gravity="center"
            android:paddingBottom="@dimen/padding5"
            android:paddingTop="@dimen/padding5"
            android:text="@string/_03_11_2017"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize13" />

        <android.support.v7.widget.CardView
            android:id="@+id/cvElementCustomerAccountClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/ripple_anim"
            card_view:cardCornerRadius="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_anim"
                android:orientation="vertical"
                android:padding="@dimen/padding10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvElementCustomerAccountNo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/invoice"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize13"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvElementCustomerAccountAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin5"
                        android:text="$ 54253.00"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/textSize13" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin10"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvElementCustomerAccountTotalProduct"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/total_product_2"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/textSize13" />

                    <com.example.keval.keval.Utils.CircleImageView
                        android:id="@+id/cvElementCustomerAccountPaid"
                        android:layout_width="@dimen/padding10"
                        android:layout_height="@dimen/padding10"
                        android:layout_marginLeft="@dimen/margin20"
                        android:src="@color/white"
                        app:civ_fill_color="@color/white" />

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>