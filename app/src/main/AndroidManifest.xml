<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.keval.keval">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BIND_PRINT_SERVICE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CLEAR_APP_CACHE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".Activity.Customer"
            android:label="Add Customer"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".Activity.MyShop"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.Payment"
            android:label="@string/new_payment"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activity.CustomerAccount"
            android:label="@string/customerDetails"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".Activity.Product"
            android:label="@string/editprofile"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activity.Account"
            android:label="@string/accounts"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".Activity.AllTransaction"
            android:label="@string/all_transaction"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".Activity.More"
            android:label="@string/more"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".DataImage.ShareResultActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.MyShareTheme"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".DataImage.ShareBill"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activity.AddRemainder"
            android:label="@string/add_remainder"
            android:windowSoftInputMode="stateHidden" />

        <receiver android:name=".Alarm.AlarmReceiver" />

        <activity
            android:name=".Activity.Remainder"
            android:label="@string/remainder"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".Activity.Invoice"
            android:label="@string/invoice"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activity.AddProductToInvoice"
            android:label="@string/add_product"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".Activity.CustomerProfilePic"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustPan" />

    </application>
</manifest>